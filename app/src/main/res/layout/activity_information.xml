<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff2f2f2f"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Information"
            android:id="@+id/textView14"
            android:textColor="#ff00ff48"
            android:clickable="false"
            android:textSize="24dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Basal Metabolic Rate(BMR):"
            android:id="@+id/textView15"
            android:textSize="22dp"
            android:textColor="#ff00ff99"
            android:layout_below="@+id/textView14"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="     Basal metabolic rate (BMR) is the minimal rate of energy expenditure per unit time by warm-blooded animals at rest.v"
            android:id="@+id/textView16"
            android:textSize="20dp"
            android:textColor="#ff00caff"
            android:layout_below="@+id/textView15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView15"
            android:layout_alignEnd="@+id/textView15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Equations:"
            android:id="@+id/textView7"
            android:textSize="22dp"
            android:textColor="#ff00ff99"
            android:layout_below="@+id/textView14"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Calorie Burn = (BMR / 24) x MET x T"
            android:id="@+id/textView17"
            android:textSize="20dp"
            android:textColor="#ff00caff"
            android:layout_below="@+id/textView15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView15"
            android:layout_alignEnd="@+id/textView15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="where 24 is in hours"
            android:id="@+id/textView18"
            android:textSize="20dp"
            android:textColor="#ff00caff"
            android:layout_below="@+id/textView15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView15"
            android:layout_alignEnd="@+id/textView15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="For males: BMR = (13.75 x WKG) + (5 x HC) - (6.76 x age) + 66 "
            android:id="@+id/textView19"
            android:textSize="20dp"
            android:textColor="#ff00caff"
            android:layout_below="@+id/textView15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView15"
            android:layout_alignEnd="@+id/textView15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="For females: BMR = (9.56 x WKG) + (1.85 x HC) - (4.68 x age) + 655 "
            android:id="@+id/textView20"
            android:textSize="20dp"
            android:textColor="#ff00caff"
            android:layout_below="@+id/textView15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView15"
            android:layout_alignEnd="@+id/textView15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="MET = Metabolic Equivalent (for selected activity) for each activity&apos;s MET value see: http://appliedresearch.cancer.gov/atus-met/met.php"
            android:id="@+id/textView23"
            android:textSize="20dp"
            android:textColor="#ff00caff"
            android:layout_below="@+id/textView15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView15"
            android:layout_alignEnd="@+id/textView15"
            android:onClick="buttonBBackClicked" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView12"
            android:textSize="20dp"
            android:textColor="#ff00caff"
            android:layout_below="@+id/textView15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView15"
            android:layout_alignEnd="@+id/textView15" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Back to Main"
            android:id="@+id/bb"
            android:onClick="buttonBBackClicked"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

</RelativeLayout>